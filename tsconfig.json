{
	"compilerOptions": {
		"lib": ["es2019", "es2020", "dom"],
		"module": "commonjs",
		"target": "es2019",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "./dist/",
		"typeRoots": ["./node_modules/@types"],
		"skipLibCheck": true
	},
	"include": ["credentials/**/*.ts", "nodes/**/*.ts"],
	"exclude": ["node_modules/**/*", "dist/**/*"]
} 